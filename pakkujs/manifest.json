{
    "name": "pakku：哔哩哔哩弹幕过滤器",
    "short_name": "pakku",
    "version": "8.6.6",
    "description": "瞬间过滤B站(bilibili.com)刷屏的相似弹幕，还你清爽的弹幕视频体验。",
    "icons": {
        "128": "assets/logo.png",
        "48": "assets/logo_48.png"
    },
    
    "manifest_version": 2,
    
    "permissions": [
        "*://*.bilibili.com/*",
        "webRequest",
        "webRequestBlocking",
        "notifications"
    ],
    "optional_permissions": [
        "ws://*.bilibili.com/*",
        "wss://*.bilibili.com/*"
    ],
    "content_security_policy":
        "default-src 'self' https://*.cnzz.com; frame-src http://s.xmcp.ml; img-src data: http://s.xmcp.ml https://*.cnzz.com; object-src 'self'; connect-src http://s.xmcp.ml http://*.bilibili.com https://*.bilibili.com https://img.shields.io data:; style-src 'self' 'unsafe-inline'",
    
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "browser_action": {
        "default_icon": "assets/icon_display.png",
        "default_popup": "popup/popup.html",
        "default_title": "pakku"
    },
    "commands": {
        "toggle-global-switch": {
            "suggested_key": {
                "default": "Alt+R"
            },
            "description": "切换工作状态"
        },
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+X"
            },
            "description": "打开对话框"
        }
    },
    
    "background": {
        "page": "core/background.html"
    },
    
    "web_accessible_resources": [
        "core/content_script.js"
    ]
}
