{
    "name": "pakku：哔哩哔哩弹幕过滤器",
    "short_name": "pakku",
    "version": "10.0.4",
    "description": "瞬间过滤B站(bilibili.com)的刷屏弹幕，还你清爽的弹幕视频体验。",
    "homepage_url": "https://s.xmcp.ml/pakkujs/?src=wext_homepage",
    "icons": {
        "128": "assets/logo.png",
        "48": "assets/logo_48.png"
    },
    "author": "xmcp",
    
    "manifest_version": 2,
    
    "permissions": [
        "*://*.bilibili.com/*",
        "webRequest",
        "webRequestBlocking",
        "notifications",
        "storage"
    ],
    "optional_permissions": [
        "ws://*.bilibili.com/*",
        "wss://*.bilibili.com/*"
    ],
    "content_security_policy":
        "default-src 'self' https://*.cnzz.com; frame-src http://s.xmcp.ml https://s.xmcp.ml; img-src data: http://s.xmcp.ml https://s.xmcp.ml https://*.cnzz.com; object-src 'self'; connect-src http://s.xmcp.ml https://s.xmcp.ml http://*.bilibili.com https://*.bilibili.com https://img.shields.io https://cdnjs.cloudflare.com data:; style-src 'self' 'unsafe-inline'",
    
    "options_ui": {
        "page": "page/options.html",
        "open_in_tab": true
    },
    "browser_action": {
        "default_icon": "assets/icon_display.png",
        "default_popup": "page/popup.html",
        "default_title": "pakku"
    },
    "commands": {
        "toggle-global-switch": {
            "suggested_key": {
                "default": "Alt+R"
            },
            "description": "切换工作状态"
        },
        "show-local": {
            "description": "处理本地弹幕"
        },
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+X"
            },
            "description": "打开对话框"
        }
    },
    
    "background": {
        "page": "core/background.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.bilibili.com/*"],
            "js": ["assets/script_injector.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    
    "web_accessible_resources": [
        "assets/xhr_hook.js"
    ]
}
